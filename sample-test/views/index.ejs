<html>
	<head>
		<title>Personal Posts</title>
	<script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.2.19/angular.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.13/angular-ui-router.js"></script>
    <script src="/javascripts/angularApp.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
  
    </head>
   


   <body ng-app="testSite" >
      
      <ui-view></ui-view>
    

   
   	
    
    
      <script type="text/ng-template" id="/home.html">
    <div class="page-header">
      <h1>Flapper News</h1>
    </div>
       <div ng-repeat="post in posts">
          
    <h1>
      {{post.name}}
    </h1>
    <h2>
      {{post.age}}
    </h2>
    <h4>Comments</h4>
    <div ng-repeat = "comment in post.comments">
    <span>
    {{comment.upvotes}} - by {{comment.author}</span>

    <span>{{comment.body}}</span>
    </div>
    </div>
    <form ng-submit="addPost()">
        <input type = "text" ng-model="name"> Name</input>
        </br>
        <input type = "text" ng-model="age"> Age</input>
        </br>
        <button type="submit">Post</button>
    </form>
      <button type = "Delete All" ng-click="clearAll()"> Delete </button>

    <!-- rest of template -->
    </script>
   </body>
</html>